        android:id="@+id/tv_progress"
        android:layout_marginLeft="5dp"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textColor="#8A2BE2"/>

</RelativeLayout>
