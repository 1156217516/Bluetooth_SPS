<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="配置工具程序："
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/tv_FName_net"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_marginEnd="3dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/net_id_40"/>
        <EditText
            android:id="@+id/et_id_net"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:maxLength="30"
            style="@style/editText_style"
            android:layout_marginEnd="3dp"
            tools:ignore="LabelFor" />

        <Button
            android:id="@+id/read_config_net1"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button"
            android:textColor="@color/btn_font_color"
            android:gravity="center"
            android:text="@string/string7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/ip_net_40"/>
        <EditText
            android:id="@+id/et_ip1_net"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            style="@style/editText_style"
            android:layout_marginEnd="3dp"
            android:nextFocusForward="@+id/et_ip2_net"
            tools:ignore="LabelFor" />
        <EditText
            android:id="@+id/et_ip2_net"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            style="@style/editText_style"
            android:layout_marginEnd="3dp"
            android:nextFocusForward="@+id/et_ip3_net"
            tools:ignore="LabelFor" />
        <EditText
            android:id="@+id/et_ip3_net"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            style="@style/editText_style"
            android:layout_marginEnd="3dp"
            android:nextFocusForward="@+id/et_ip4_net"
            tools:ignore="LabelFor" />
        <EditText
            android:id="@+id/et_ip4_net"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            style="@style/editText_style"
            android:layout_marginEnd="3dp"
            android:nextFocusForward="@+id/et_port_net"
            tools:ignore="LabelFor" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:text="@string/port_net_40"/>
        <EditText
            android:id="@+id/et_port_net"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.5"
            android:maxLength="8"
            style="@style/editText_style"
            android:layout_marginEnd="5dp"
            tools:ignore="LabelFor" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        tools:ignore="RtlHardcoded">

        <Button
            android:id="@+id/read_config_net2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button"
            android:textColor="@color/btn_font_color"
            android:gravity="center"
            android:text="@string/string7"/>
        <Button
            android:id="@+id/write_config_net"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button"
            android:textColor="@color/btn_font_color"
            android:gravity="center"
            android:text="@string/string8"/>

        <Button
            android:id="@+id/clear_net"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button"
            android:textColor="@color/btn_font_color"
            android:gravity="center"
            android:text="@string/string14"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_content_net"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbarStyle="outsideOverlay"
        android:layout_weight="4"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:fadeScrollbars="false"
        android:focusableInTouchMode="true"
        android:gravity="left|center_vertical"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/tv_content_net"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        tools:ignore="RtlHardcoded">
        <Button
            android:id="@+id/reset_net"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button"
            android:textColor="@color/btn_font_color"
            android:gravity="center"
            android:text="@string/string9"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/update_net"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button"
            android:textColor="@color/btn_font_color"
            android:gravity="center"
            android:text="@string/update_net_40"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/end_config_net"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button"
            android:textColor="@color/btn_font_color"
            android:gravity="center"
            android:text="@string/string11"
            tools:ignore="ButtonStyle" />
    </LinearLayout>


</LinearLayout>